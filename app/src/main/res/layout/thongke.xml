<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/aliceblue">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp"
        >
        <TextView
            android:id="@+id/title1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Biểu đồ 7 ngày gần đây"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_centerHorizontal="true"
            android:layout_margin="10dp"
            />

        <com.github.mikephil.charting.charts.BarChart
            android:id="@+id/barChart"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_below="@+id/title1" />
        <View
            android:id="@+id/line"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/barChart"
            android:layout_margin="10dp"
            android:background="@color/black"
            />
        <TextView
            android:id="@+id/title2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Thống Kê"
            android:textSize="20sp"
            android:textStyle="normal"
            android:textColor="@color/black"
            android:layout_centerHorizontal="true"
            android:layout_margin="5dp"
            android:layout_below="@+id/line"
            />
            <TableLayout
                android:id="@+id/table"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="15dp"
                android:layout_marginHorizontal="5dp"
                android:layout_below="@+id/title2"
                android:background="#f1f1f1">
                <TableRow>
                    <TextView
                        android:padding="5dp"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:textStyle="bold"
                        android:gravity="center"/>
                    <TextView
                        android:textColor="@color/black"
                        android:padding="5dp"
                        android:layout_width="0dp"
                        android:text="Hôm nay"
                        android:layout_weight="1"
                        android:textStyle="bold"
                        android:gravity="center"/>

                    <TextView
                        android:textColor="@color/black"
                        android:padding="5dp"
                        android:layout_width="0dp"
                        android:text="7 ngày"
                        android:layout_weight="1"
                        android:textStyle="bold"
                        android:gravity="center"/>
                    <TextView
                        android:textColor="@color/black"
                        android:padding="5dp"
                        android:layout_width="0dp"
                        android:text="30 ngày"
                        android:layout_weight="1"
                        android:textStyle="bold"
                        android:gravity="center"/>
                </TableRow>

                <TableRow>
                    <TextView
                        android:padding="5dp"
                        android:layout_width="0dp"
                        android:text="Doanh số"
                        android:textColor="@color/black"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:background="#ffffff"
                        android:layout_marginBottom="1dp"
                        android:layout_marginHorizontal="1dp"/>

                    <TextView
                        android:id="@+id/txtDSHN"
                        android:padding="5dp"
                        android:layout_width="0dp"
                        android:text="0"
                        android:maxLength="10"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:background="#ffffff"
                        android:layout_marginRight="1dp"
                        android:layout_marginBottom="1dp"/>
                    <TextView
                        android:id="@+id/txtDS7N"
                        android:padding="5dp"
                        android:layout_width="0dp"
                        android:text="0"
                        android:maxLength="10"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:background="#ffffff"
                        android:layout_marginRight="1dp"
                        android:layout_marginBottom="1dp"/>
                    <TextView
                        android:id="@+id/txtDS30N"
                        android:padding="5dp"
                        android:layout_width="0dp"
                        android:text="0"
                        android:maxLength="10"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:background="#ffffff"
                        android:layout_marginRight="1dp"
                        android:layout_marginBottom="1dp"/>

                </TableRow>

                <TableRow>
                    <TextView
                        android:padding="5dp"
                        android:layout_width="0dp"
                        android:text="Lợi nhuận"
                        android:textColor="@color/black"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:background="#ffffff"
                        android:layout_marginBottom="1dp"
                        android:layout_marginHorizontal="1dp"/>

                    <TextView
                        android:id="@+id/txtLNHN"
                        android:padding="5dp"
                        android:layout_width="0dp"
                        android:text="0"
                        android:maxLength="10"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:background="#ffffff"
                        android:layout_marginRight="1dp"
                        android:layout_marginBottom="1dp"/>
                    <TextView
                        android:id="@+id/txtLN7N"
                        android:padding="5dp"
                        android:layout_width="0dp"
                        android:text="0"
                        android:maxLength="10"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:background="#ffffff"
                        android:layout_marginRight="1dp"
                        android:layout_marginBottom="1dp"/>
                    <TextView
                        android:id="@+id/txtLN30N"
                        android:padding="5dp"
                        android:layout_width="0dp"
                        android:text="0"
                        android:maxLength="10"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:background="#ffffff"
                        android:layout_marginRight="1dp"
                        android:layout_marginBottom="1dp"/>
                </TableRow>
            </TableLayout>
    </RelativeLayout>
</ScrollView>
