<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/aliceblue"
    >

    <RelativeLayout
        android:id="@+id/rlttcn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/aqua"
        android:padding="20dp">

        <TextView
            android:id="@+id/txtuser"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/user" />

        <TextView
            android:id="@+id/txthoten"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@+id/txtuser"
            android:text="Họ và Tên"
            android:textSize="25sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txtsodienthoai"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txthoten"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@+id/txtuser"
            android:text="Số Điện Thoại"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/txtnext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerInParent="true"
            android:drawableStart="@drawable/next" />
    </RelativeLayout>

    <TextView
        android:id="@+id/txtXemTT"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableStart="@drawable/truck"
        android:drawableLeft="@drawable/truck"
        android:padding="20dp"
        android:text="Xem tiến độ giao hàng"
        android:gravity="center_vertical"
        android:textSize="20sp"
        android:drawablePadding="10dp"
        android:textStyle="bold"
        android:layout_marginTop="10dp"
        android:drawableEnd="@drawable/next"
        android:drawableRight="@drawable/next"
        android:background="@color/aqua"/>
    <TextView
        android:id="@+id/thongtinlienhe"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/aqua"
        android:drawableStart="@drawable/info_app"
        android:drawableEnd="@drawable/next"
        android:drawablePadding="10dp"
        android:gravity="center_vertical"
        android:padding="20dp"
        android:text="Thông tin liên hệ"
        android:textSize="20sp"
        android:textStyle="bold" />
    <!--<TextView
        android:id="@+id/txtTTLH"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableStart="@drawable/info_contact"
        android:drawableLeft="@drawable/info_contact"
        android:padding="20dp"
        android:text="Thông Tin Liên Hệ"
        android:gravity="center_vertical"
        android:textSize="20sp"
        android:drawablePadding="10dp"
        android:textStyle="bold"
        android:drawableEnd="@drawable/next"
        android:drawableRight="@drawable/next"
        android:background="@color/aqua"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/aqua"
        android:layout_marginTop="10dp"
        android:drawableStart="@drawable/support"
        android:drawableEnd="@drawable/next"
        android:drawablePadding="10dp"
        android:gravity="center_vertical"
        android:padding="20dp"
        android:text="Hỗ Trợ"
        android:textSize="20sp"
        android:textStyle="bold" />-->
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:padding="20dp"
        android:textColor="@color/black"
        android:backgroundTint="@color/aqua"
        android:id="@+id/btnDangXuat"
        android:text="Đăng Xuất"
        />

</LinearLayout>